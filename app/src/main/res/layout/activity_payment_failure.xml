<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentFailure"
    android:background="@drawable/errorbackground">

    <TextView
        android:id="@+id/failure_mess"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/secularone_regular_thick"
        android:textSize="45sp"
        android:text="Payment Failed"
        android:textColor="@color/Yellow"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:src="@drawable/brokencard"
        android:layout_below="@id/failure_mess"
        android:layout_centerHorizontal="true"
        android:id="@+id/failure_image"/>

    <TextView
        android:id="@+id/failure_out"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/Azure"
        android:layout_below="@id/failure_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/failure_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/failure_out"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/back_to_billing_page"/>

</RelativeLayout>